{
  "name": "syno.in",
  "short_name": "syno.in",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "Screensharing for syno.in",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://syno.in/*"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_end"
  }],
  "externally_connectable": {
      "matches": [
          "https://syno.in/*"
      ]
  }
}

